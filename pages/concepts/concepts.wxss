.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.concept-header {
  text-align: center;
  margin: 30rpx 0;
}

.concept-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.introduction-section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.introduction-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
  display: block;
}

.scenes-list {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.scene-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.scene-item:last-child {
  border-bottom: none;
}

.scene-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.scene-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.audio-btn {
  background: #07c160;
  color: white;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  border: none;
}

.concept-switcher {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 20rpx;
}

.concept-btn {
  background: #fff;
  color: #333;
  border: 2rpx solid #07c160;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  min-width: 120rpx; /* 确保按钮可点击区域足够大 */
  z-index: 1; /* 确保按钮在进度条之上 */
  position: relative; /* 修复z-index生效问题 */
}

/* 添加环形进度条样式 */
.progress-ring {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 0;
}

/* 添加进度文本样式 */
.progress-text {
  position: absolute;
  top: -5rpx;
  right: 5rpx;
  font-size: 20rpx;
  color: #07c160;
  z-index: 2;
}

/* 修改按钮容器样式 */
.concept-btn-container {
  position: relative;
  margin: 10rpx;
}

.concept-btn:active {
  background: #07c160; /* 添加点击反馈 */
  color: white;
}

.concept-btn-container {
  position: relative;
  display: inline-block;
  margin: 0 10rpx 15rpx; /* 增加垂直间距，避免按钮重叠 */
}

.progress-ring {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 48rpx; /* 增大容器尺寸从40rpx到48rpx */
  height: 48rpx;
  z-index: 0;
}

/* 进度文本样式 */
.progress-text {
  position: absolute;
  top: -8rpx;
  right: 8rpx;
  font-size: 24rpx; /* 增大字体 */
  color: #007AFF;
  z-index: 2;
  white-space: nowrap; /* 防止文本换行 */
  font-weight: bold; /* 加粗文本 */
  background: rgba(255,255,255,0.8); /* 添加半透明白色背景确保可见 */
  padding: 0 4rpx;
  border-radius: 4rpx;
}